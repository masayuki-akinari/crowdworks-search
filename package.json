{
    "name": "crowdworks-search",
    "version": "1.0.0",
    "description": "クラウドワークス案件自動検索・評価システム",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=integration",
        "test:e2e": "jest --testPathPattern=e2e",
        "cdk:synth": "tsc -p tsconfig.cdk.json && cdk synth",
        "cdk:deploy": "cdk deploy --require-approval never",
        "cdk:destroy": "cdk destroy --force",
        "cdk:diff": "tsc -p tsconfig.cdk.json && cdk diff",
        "dev": "ts-node src/index.ts",
        "start": "node dist/index.js",
        "prepare": "husky install",
        "docker:build": "docker build -t crowdworks-searcher .",
        "docker:run": "docker run --rm crowdworks-searcher",
        "docker:dev": "docker-compose up --build",
        "docker:test": "docker-compose --profile test run --rm test",
        "precommit": "lint-staged",
        "security:audit": "npm audit --audit-level=moderate"
    },
    "keywords": [
        "crowdworks",
        "automation",
        "scraping",
        "aws",
        "serverless",
        "typescript"
    ],
    "author": "Your Name",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "dependencies": {
        "@aws-sdk/client-lambda": "^3.450.0",
        "@aws-sdk/client-s3": "^3.450.0",
        "@aws-sdk/client-sns": "^3.450.0",
        "@aws-sdk/client-ssm": "^3.450.0",
        "aws-cdk-lib": "^2.110.0",
        "aws-sdk": "^2.1691.0",
        "constructs": "^10.3.0",
        "openai": "^4.20.0",
        "playwright-core": "^1.45.0",
        "@sparticuz/chromium": "^126.0.0",
        "source-map-support": "^0.5.21",
        "zod": "^3.22.0",
        "aws-lambda": "^1.0.7",
        "typescript": "^5.6.3"
    },
    "devDependencies": {
        "@aws-cdk/aws-apigateway": "^1.204.0",
        "@aws-cdk/aws-events": "^1.204.0",
        "@aws-cdk/aws-events-targets": "^1.204.0",
        "@aws-cdk/aws-lambda": "^1.204.0",
        "@aws-cdk/aws-s3": "^1.204.0",
        "@aws-cdk/core": "^1.204.0",
        "@types/aws-lambda": "^8.10.145",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.9.1",
        "@typescript-eslint/eslint-plugin": "^8.14.0",
        "@typescript-eslint/parser": "^8.14.0",
        "aws-cdk": "^2.170.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.0.0",
        "nock": "^13.3.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run type-check && npm run test"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    }
}